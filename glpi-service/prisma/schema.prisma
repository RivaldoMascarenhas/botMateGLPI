datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Ticket {
  id              Int      @id @default(autoincrement())
  glpiTicketId    Int      @unique
  title           String
  description     String
  requesttypes_id Int
  urgencyText     String
  userRequest     String?
  dateMod         String?
  status          Int?
  phone           String
  createdAt       DateTime @default(now())
  isClosed        Boolean  @default(false) // <- novo campo
}
