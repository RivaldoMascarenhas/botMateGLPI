{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    // This option allows you to import '.ts' files with their extensions.
    "allowImportingTsExtensions": true,
    "noEmit": true,
    // Set your project's source and output folders.
    "rootDir": "./src",
    // These settings are crucial for a Node.js project.
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ],
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist"
  ]
}